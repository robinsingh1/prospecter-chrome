{
  "manifest_version": 2,

  "name": "Leadchimp",
  "description": "Supercharge your prospecting",
  "version": "1.0",

  "content_scripts": [
    {
      "js": ["js/jquery.js", "js/bootstrap.min.js", "js/moment.min.js","js/messenger.min.js","js/messenger-theme-flat.js","js/messenger-theme-future.js","js/messenger.js", "js/in_app_msgr.js", "js/app.js"],
      "css": ["css/tooltip.css", "css/app.css", "css/messenger.css","css/messenger-spinner.css", "css/messenger-theme-air.css", "css/messenger-theme-block.css", "css/messenger-theme-flat.css", "css/messenger-theme-future.css", "css/messenger-theme-ice.css"],
      "matches": ["*://*.google.ca/*", "*://*.google.com/*", "https://www.google.ca/search?*"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "tabs", "https://www.google.ca/*"
  ],

  "web_accessible_resources": [
    "js/jquery.js",
    "img/*.png",
    "css/bootstrap.min.css",
    "css/app.css"
  ]
}
